{
    "build": {
        "env": {
            "GO_BUILD_FLAGS": "-ldflags '-s -w'"
        }
    },
    "routes": [
        {
            "src": "/api",
            "dest": "/api",
            "methods": [
                "GET"
            ]
        },
        {
            "src": "/api/user/(?<id>[^/]*)",
            "dest": "/api/user",
            "methods": [
                "GET"
            ]
        },
        {
            "src": "/api/json",
            "dest": "/api/json",
            "methods": [
                "GET"
            ]
        },
        {
            "src": "/callback",
            "dest": "/api/callback",
            "methods": [
                "POST"
            ]
        },
        {
            "src": "/push",
            "dest": "/api/push",
            "methods": [
                "POST"
            ]
        }
    ],
    "crons": [{
    "path": "/push",
    "schedule": "0 0 * * *"
  }]
}